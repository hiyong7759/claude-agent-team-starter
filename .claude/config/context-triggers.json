{
    "triggers": [
        {
            "category": "Security Policy",
            "regex": "password|security|secret|token|key|reset",
            "load": [
                "docs/rules/security-rules.md"
            ]
        },
        {
            "category": "Development Standards",
            "regex": "database|schema|db|sql|migration|coding|naming",
            "load": [
                "docs/rules/ts-impl-rules.md",
                "docs/rules/naming-rules.md"
            ]
        },
        {
            "category": "Versioning & Deployment",
            "regex": "deploy|production|release|version",
            "load": [
                "docs/rules/execution-rules.md"
            ]
        },
        {
            "category": "Documentation Standards",
            "regex": "prd|spec|document|write|template",
            "load": [
                "docs/rules/doc-rules.md"
            ]
        },
        {
            "category": "MA Workflow (REQ/WI Loop)",
            "regex": "REQ|requirement|WI|work\\s*item|workflow",
            "load": [
                "docs/rules/workflow-rules.md",
                "docs/rules/glossary.md",
                "docs/rules/hard-rules.md"
            ]
        },
        {
            "category": "Agent System (Subagents/Skills/DocOps)",
            "regex": "subagent|skills?|docops|routing|agent\\s*docs\\s*map",
            "load": [
                "docs/rules/workflow-rules.md"
            ]
        },
        {
            "category": "Execution / HITL Policy",
            "regex": "execute|command|approval|HITL|tool",
            "load": [
                "docs/rules/execution-rules.md"
            ]
        },
        {
            "category": "Testing & Quality",
            "regex": "test|quality|lint|coverage|regression",
            "load": [
                "docs/rules/test-rules.md",
                "docs/rules/quality-gates-rules.md"
            ]
        },
        {
            "category": "Code Review",
            "regex": "review|CR|best\\s*practice",
            "load": [
                "docs/rules/review-rules.md"
            ]
        }
    ]
}
